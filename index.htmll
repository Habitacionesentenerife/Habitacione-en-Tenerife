  <main class="container">
    <!-- Carrusel de imágenes: se ha reducido la altura en CSS y añadido más fotografías de habitaciones -->
    <section class="hero carousel">
      <div class="carousel-track">
        <!-- Imágenes de habitaciones y paisajes, se cargarán de forma rotativa -->
        <img src="hab1_1.jpg" alt="Habitación luminosa" loading="lazy">
        <img src="hab1_2.jpg" alt="Habitación acogedora" loading="lazy">
